# Supply Chain AI Operating System - Environment Variables
# Copy to .env and fill in values

# --- DATABASE ---
POSTGRES_USER=supplychain
POSTGRES_PASSWORD=supplychain_secret
POSTGRES_DB=supply_chain_db
DATABASE_URL=postgresql://supplychain:supplychain_secret@localhost:5432/supply_chain_db

# --- KAFKA ---
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
KAFKA_TOPIC=supply-chain-events

# --- OBJECT STORAGE (MinIO / S3) ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=supply-chain-lakehouse
S3_STORAGE_BUCKET=supply-chain-lakehouse

# AWS-compatible credentials for Delta Lake / PySpark
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_ENDPOINT_URL=http://localhost:9000

# --- REDIS (WebSocket pub/sub) ---
REDIS_URL=redis://localhost:6379/0

# --- AI REASONING ---
# Required for AI analysis. Copy this file to .env and set your key.
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Claude model (default: Sonnet 4.6)
CLAUDE_MODEL=claude-sonnet-4-6

# --- DAGSTER ---
DAGSTER_POSTGRES_HOST=localhost
DAGSTER_POSTGRES_PORT=5432
DAGSTER_POSTGRES_USER=supplychain
DAGSTER_POSTGRES_PASSWORD=supplychain_secret
DAGSTER_POSTGRES_DB=dagster

# --- FRONTEND ---
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# --- OPTIONAL: dbt ---
DBT_PROFILES_DIR=./transforms
DBT_TARGET=dev
